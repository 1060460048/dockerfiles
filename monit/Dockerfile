#
# Dockerfile for monit
#

FROM alpine
MAINTAINER kev <noreply@datageek.info>

RUN apk add -U monit \
    && rm -rf /var/cache/apk/*
    && mkdir -p /var/lib/monit/events

COPY monit /etc/monit
RUN chmod 600 /etc/monit/monitrc

VOLUME /etc/monit /var/lib/monit
EXPOSE 2812

CMD ["monit", "-I", "-c", "/etc/monit/monitrc"]
